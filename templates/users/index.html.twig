<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}UserApp!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('resources/css/bootstrap.min.css') }}" />      
    </head>
    <body>
        <div class="container">
            <div class="d-flex align-items-center p-3 my-3 rounded shadow-lg">
                 <h3 class="center">Users List</h3>
            </div>

            <div class="my-3 p-3 bg-white rounded shadow-lg"> 
               
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page"> <a href="{{ path('user_create')}}" class=" pull-right">Create New User</a></li>
                       
                    </ol>
                </nav>

                <br />
                <div class="row">   
                    <table class="table">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>Email Address </th>
                                    <th>Phone </th>
                                    <th>Address </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in all_users %}
                                <tr>
                                    <td> {{ user.firstname~" "~user.lastname }}  </td>
                                    <td> {{ user.email }} </td>
                                    <td> {{ user.phone }} </td>
                                    <td> {{ user.address }} </td>
                                    <td>
                                        <a href="{{ path('user_update',{id: user.id})}}" class="btn btn-lg btn-info">Update</a>
                                        <a href="{{ path('user_delete',{id: user.id})}}" class="btn btn-lg btn-danger">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>